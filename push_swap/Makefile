NAME = push_swap

CC = cc

CFLAGS = -Wall -Wextra -Werror

SRCS =	error_check.c \
		push.c \
		reverse_rotate.c \
		rotate.c \
		sort_three.c \
		split.c \
		stack_init.c \
		stack_utils.c \
		swap.c \
		main.c \
		find_min_max.c \
		set_current_pos.c

OBJS = $(SRCS:.c=.o)

all: $(NAME)

$(NAME): $(OBJS)
	$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJS)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
